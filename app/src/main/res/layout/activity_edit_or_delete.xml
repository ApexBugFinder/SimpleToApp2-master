        <!--android:text="@string/btnDelete"-->
        <!--android:onClick="onDelete"-->
        <!--android:id="@+id/btnDelete"-->

        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentEnd="true" />-->

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout3">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvItem"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/todoId"
        android:layout_below="@id/tvItem"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout3"
        android:id="@+id/linearLayout4">

        <EditText
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:id="@+id/etUpdateText"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignStart="@+id/datePicker" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout4"
        >
    <TextView
    android:layout_alignParentStart="true"
    android:layout_below="@+id/todoId"
    android:id="@+id/tvSpinnertitle"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="@string/priority_stirng">

    </TextView>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:entries="@array/priority"
        android:layout_below="@+id/todoId"
        android:layout_toEndOf="@+id/tvSpinnertitle" />
</LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/relativelayoutdescription"
    android:layout_below="@+id/linearLayout2"
    android:layout_alignParentEnd="true">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:layout_marginTop="0dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextdescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextdescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dueDate"
        android:id="@+id/textView"
        android:layout_below="@+id/editTextdescription"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textViewDueDate" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:layout_marginLeft="20dp"
        android:id="@+id/textViewDueDate"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSetDueDate"
        android:id="@+id/btnSetDueDate"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/editText"
        android:layout_toEndOf="@+id/textViewDueDate"
        android:onClick="setDueDate" />

</LinearLayout>
</RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/relativelayoutdescription"
    android:layout_above="@+id/linearLayout"
    android:layout_marginTop="41dp" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <DatePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/datePicker"


            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
        <TimePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datePicker"
        android:id="@+id/timePicker" />




    </RelativeLayout>


</ScrollView>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="invisible"
    android:id="@+id/tvListId"/>

</RelativeLayout>